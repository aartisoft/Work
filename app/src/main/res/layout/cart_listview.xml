<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginBottom="20dp"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="140dp"
                android:layout_height="match_parent"
                android:background="#ecf0f1">

                <ImageView
                    android:id="@+id/listview_icon"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_centerInParent="true"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="22dp"
                    android:layout_marginRight="22dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/broccoli" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/cart_item_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_margin="10dp"
                    android:text="@string/broccoli"
                    android:textColor="#787b7d"
                    android:textSize="16sp"
                    app:fontFamily="@font/ubuntu_medium" />

                <TextView
                    android:id="@+id/ksh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginStart="10dp"
                    android:text="@string/ksh"
                    android:textColor="#bdc3c7"
                    android:textSize="12sp"
                    app:fontFamily="@font/ubuntu_medium" />

                <TextView
                    android:id="@+id/cart_item_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="10dp"
                    android:layout_toEndOf="@id/ksh"
                    android:layout_toRightOf="@id/ksh"
                    android:text="500"
                    android:textColor="#185490"
                    android:textSize="14sp"
                    app:fontFamily="@font/ubuntu_medium" />

                <ImageView
                    android:id="@+id/cart_item_remove"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/cart_item_name"
                    android:layout_marginEnd="12dp"
                    android:layout_marginRight="12dp"
                    app:srcCompat="@drawable/close" />

                <ImageView
                    android:id="@+id/item_content_remove"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/cart_item_name"
                    android:layout_marginEnd="47dp"
                    android:layout_marginRight="47dp"
                    android:background="@drawable/green_circle_outline"
                    android:gravity="center"
                    android:padding="3dp"
                    app:srcCompat="@drawable/ic_remove_gray" />

                <TextView
                    android:id="@+id/item_content_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/item_content_remove"
                    android:layout_alignRight="@+id/item_content_remove"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="5dp"
                    android:layout_marginRight="5dp"
                    android:text="5"
                    android:textColor="#787b7d"
                    android:textSize="18sp"
                    app:fontFamily="@font/ubuntu_medium" />

                <ImageView
                    android:id="@+id/item_content_add"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignBottom="@+id/ksh"
                    android:layout_alignLeft="@+id/item_content_remove"
                    android:layout_alignStart="@+id/item_content_remove"
                    android:background="@drawable/green_circle_outline"
                    android:gravity="center"
                    android:padding="3dp"
                    app:srcCompat="@drawable/ic_add_gray" />
            </RelativeLayout>
        </LinearLayout>


    </android.support.v7.widget.CardView>
</RelativeLayout>