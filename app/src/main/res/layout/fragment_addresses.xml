<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.AddressesFragment">

    <ImageView
        android:id="@+id/agripay_logo"
        android:layout_width="41dp"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:src="@drawable/agripay_logo" />

    <ImageView
        android:id="@+id/shop_search"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="55dp"
        android:layout_marginRight="55dp"
        android:layout_marginTop="21dp"
        android:src="@drawable/search_icon" />

    <ImageView
        android:id="@+id/shop_cart"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/shop_search"
        android:layout_marginEnd="18dp"
        android:layout_marginRight="18dp"
        android:src="@drawable/shop_cart" />

    <TextView
        android:id="@+id/cart_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/agripay_logo"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="11dp"
        android:background="@drawable/green_circle"
        android:gravity="center"
        android:paddingEnd="3dp"
        android:paddingStart="3dp"
        android:text="4"
        android:textColor="@color/colorWhite"
        android:textSize="10sp" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/agripay_logo"
        android:layout_marginTop="10dp"
        android:background="@drawable/gradient_shade" />

    <ImageView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view"
        android:padding="15dp"
        app:srcCompat="@drawable/ic_chevron_left" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/view"
        android:layout_centerHorizontal="true"
        android:padding="15dp"
        android:text="@string/my_address"
        android:textColor="#669a3d"
        android:textSize="16sp"
        app:fontFamily="@font/ubuntu_medium" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="165dp"
        android:layout_below="@+id/back"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        android:layout_marginTop="20dp"
        app:cardBackgroundColor="@color/colorWhite"
        app:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="14dp"
                android:text="Kitengela"
                android:textColor="#777777"
                android:textSize="16sp"
                app:fontFamily="@font/ubuntu_medium" />

            <TextView
                android:id="@+id/city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/location"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:text="Nairobi"
                android:textColor="#777777"
                android:textSize="16sp"
                app:fontFamily="@font/ubuntu_medium" />

            <TextView
                android:id="@+id/po_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/city"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:text="58099-00200"
                android:textColor="#777777"
                android:textSize="16sp"
                app:fontFamily="@font/ubuntu_medium" />

            <TextView
                android:id="@+id/building"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/po_box"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="5dp"
                android:text="Utumishi Co-op hs. Mamlaka road"
                android:textColor="#777777"
                android:textSize="16sp"
                app:fontFamily="@font/ubuntu_medium" />

            <ImageView
                android:id="@+id/verified"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_margin="20dp"
                android:src="@drawable/verified" />

            <Button
                android:id="@+id/edit_address"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/building"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/button_background2"
                android:fontFamily="@font/ubuntu_medium"
                android:text="@string/edit"
                android:textAllCaps="false"
                android:textColor="#777777"
                android:textSize="12sp" />

            <Button
                android:id="@+id/delete_address"
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_below="@+id/building"
                android:layout_marginLeft="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:layout_toEndOf="@id/edit_address"
                android:layout_toRightOf="@id/edit_address"
                android:background="@drawable/button_background2"
                android:fontFamily="@font/ubuntu"
                android:text="@string/delete"
                android:textAllCaps="false"
                android:textColor="#eb0d0d"
                android:textSize="12sp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <Button
        android:id="@+id/button_proceed_to_payment"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="120dp"
        android:background="@drawable/button_background"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="@string/proceed_to_payment"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite"
        android:textSize="12sp"
        app:fontFamily="@font/ubuntu_medium" />

    <ImageView
        android:layout_width="110dp"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/shop_fragment_bottom_left" />

    <ImageView
        android:layout_width="110dp"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/shop_fragment_bottom_right" />

</RelativeLayout>